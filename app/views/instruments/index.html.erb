<p id="notice"><%= notice %></p>

<h1>Listing Instruments</h1>

<table>
  <thead>
    <tr>
      <th>Prefix</th>
      <th>Port</th>
      <th>Questions</th>
      <th>Variables</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @instruments.each do |instrument| %>
      <tr>
        <td><%= instrument.prefix %></td>
        <td><%= instrument.port %></td>
        <td><%= instrument.questions.count() %></td>
	<td><%= instrument.variables.count() %></td>
        <td><%= link_to 'Show', instrument %></td>
        <td><%= link_to 'Add Question', new_instrument_question_path(instrument) %></td>
        <td><%= link_to 'Add Variable', new_instrument_variable_path(instrument) %></td> 
        <td><%= link_to 'Edit', edit_instrument_path(instrument) %></td>
        <td><%= link_to 'Destroy', instrument, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

