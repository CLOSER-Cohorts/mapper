<h1>Listing Topics</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Parent</th>
      <% if current_user.admin? %>
      <th colspan="3"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= topic.name %></td>
        <td><%= topic.parent.nil? ? 'None' : topic.parent.name %></td>
        <% if current_user.admin? %>
        <td class='show'><%= link_to 'Show', topic %></td>
        <td class='edit'><%= link_to 'Edit', edit_topic_path(topic) %></td>
        <td class='destroy'><%= link_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

